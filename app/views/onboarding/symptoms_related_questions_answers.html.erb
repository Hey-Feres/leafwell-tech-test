<div class="card p-4 shadow border-0">
  <h3>User Symptoms</h3>
  <span>Please select answer the questions below</span>

  <%= form_with url: condition_related_questions_answers_path do |form| %>
    <div class="row mt-5">
      <% @questions.each do |question| %>
        <div class="form-group mb-3">
          <center>
          <%= form.label "question_id[#{question.id}]", question.content, class:"form-label" %>
          <%= form.select "question_id[#{question.id}]", [['No', false], ['Yes', true]], { include_blank: 'Select Answer', selected: @user_question_answers.find_by(related_question_id: question.id).answer }, class: "form-select" %>
          </center>
        </div>
      <% end %>
    </div>

    <center>
      <button type="submit" class="btn btn-success mt-5">Submit</button>
    </center>
  <% end %>
</div>

<style>
  .card {
    border-radius: 20px;
    width: 40%;
    margin-bottom: 10%;
    padding: 5% 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .card span {
    width: 70%;
    text-align: center;
  }
  .btn {
    border-radius: 20px;
  }
  .form-label {
    font-size: 1rem;
  }
</style>