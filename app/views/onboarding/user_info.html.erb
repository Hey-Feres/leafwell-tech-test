<div class="card p-4 shadow border-0">
  <h3>User Info</h3>

  <%= form_with url: user_info_path do |form| %>
    <div class="form-group mt-3">
      <%= form.text_field :name, class: "form-control", placeholder: "Your name", value: current_user.name %>
    </div>

    <div class="form-group mt-3">
      <%= form.number_field :age, class: "form-control", placeholder: "Your age", value: current_user.age %>
    </div>

    <div class="form-group mt-3">
      <%= form.select :fitness_activity, @fitness_activity_options, { include_blank: 'How often do you have fitness activity?' }, class: "form-control" %>
    </div>

    <div class="form-check mt-3">
      <%= form.check_box :has_insurance, class: 'form-check-input', checked: current_user.has_insurance %>
      <%= form.label :has_insurance, 'I Have Insurance', class:"form-check-label" %>
    </div>

    <center>
      <button type="submit" class="btn btn-success mt-3">Submit</button>
    </center>
  <% end %>
</div>

<style>
  .card {
    border-radius: 20px;
    width: 40%;
    margin-bottom: 20%;
    padding: 5% 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .card span {
    width: 70%;
    text-align: center;
  }
  .btn {
    border-radius: 20px;
  }
</style>