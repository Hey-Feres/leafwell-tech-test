<div class="card p-4 shadow border-0">
  <h3>User Conditions</h3>
  <span>Please select all that apply</span>

  <%= form_with url: user_conditions_path do |form| %>
    <div class="row mt-5">
      <% @conditions_options.each do |condition_option| %>
        <div class="col-4">
          <div class="form-check">
            <%= form.check_box "condition_id[#{condition_option.id}]", class: 'form-check-input', checked: @user_conditions_ids.include?(condition_option.id) %>
            <%= form.label "condition_id[#{condition_option.id}]", condition_option.name, class:"form-check-label" %>
          </div>
        </div>
      <% end %>
    </div>

    <center>
      <button type="submit" class="btn btn-success mt-5">Submit</button>
    </center>
  <% end %>
</div>

<style>
  .card {
    border-radius: 20px;
    width: 40%;
    margin-bottom: 20%;
    padding: 5% 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .card span {
    width: 70%;
    text-align: center;
  }
  .btn {
    border-radius: 20px;
  }
</style>